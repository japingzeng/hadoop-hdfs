	$.validator.setDefaults({
    submitHandler: function() {
      alert("提交事件!");
    }
	});
	
	$().ready(function(){
		//自定义验证用户名方法
		$.validator.addMethod("userNameCheck",function(value, element){
				var pattern = /^[A-Za-z0-9][\S]*$/;
				return pattern.test(value);
			},"用户名只能以数字、字母开头");
	
		$("#registerform").validate({
			rules: {
				userName: {
					required: true,
				<!--			
				userNameCheck: true,-->	
					minlength: 6
				},
				passWord: {
					required: true,
					minlength: 6
				},
				confirm_passWord: {
					required: true,
					minlength: 6,
					equalTo: "#passWord"
				}
			},
		
			messages: {
				userName: {
					required: "请输入用户名",
					minlength: "请至少输入6位字符"
				},
				passWord: {
					required: "请输入密码",
					minlength: "请至少输入6位密码"	
				},
				confirm_passWord: {
					required: "请输入确认密码",
					minlength: "密码长度不一致",
					equalTo: "两次输入密码不一致"
				}
			}
		});
	});
	
